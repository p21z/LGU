<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="SR_SEARCH_BY_CODE"
                description="SR_SEARCH_BY_CODE_DESC"
                hint="SR_SEARCH_BY_CODE"
                />
        <field
                name="reservation_asset_id"
                type="reservationasset"
                layout="joomla.form.field.list-fancy-select"
                label="SR_FILTER_RESERVATION_ASSET_SELECT"
                onchange="this.form.submit();"
                />
        <field
                name="reserved_rooms"
                type="RoomsGroup"
                label="SR_RESERVED_ROOMS_SELECT"
                multiple="true"
                onchange="this.form.submit();"
        />
        <field
                name="state"
                type="statuses"
                scope="0"
                statusType="0"
                multiple="true"
                layout="joomla.form.field.list-fancy-select"
                label="SR_RESERVATION_STATUSES_SELECT"
                hint="SR_RESERVATION_STATUSES_SELECT"
                onchange="this.form.submit();"
                />
        <field
                name="payment_status"
                type="statuses"
                layout="joomla.form.field.list-fancy-select"
                multiple="true"
                scope="0"
                statusType="1"
                label="SR_RESERVATION_PAYMENT_STATUSES_SELECT"
                hint="SR_RESERVATION_PAYMENT_STATUSES_SELECT"
                onchange="this.form.submit();"
                />
        <field
                name="customer_fullname"
                type="text"
                title="SR_SEARCH_BY_CUSTOMER"
                hint="SR_SEARCH_BY_CUSTOMER"
                onkeydown="if (event.keyCode == 13) { this.form.submit(); return false; }"
                />
        <field
                name="guest_fullname"
                type="text"
                title="SR_SEARCH_BY_GUEST_FULLNAME_LABEL"
                description="SR_SEARCH_BY_GUEST_FULLNAME_DESC"
                hint="SR_SEARCH_BY_GUEST_FULLNAME_HINT"
                onkeydown="if (event.keyCode == 13) { this.form.submit(); return false; }"
        />
        <field
                name="checkin_from"
                type="UIDatepicker"
                label="SR_RESERVATION_FILTER_CHECK_IN_FROM"
                format="%d-%m-%Y"
                filter="user_utc"
                hint="SR_RESERVATION_FILTER_CHECK_IN_FROM"
                onchange="this.form.submit()"
                changeMonth="true"
                changeYear="true"
                />
        <field
                name="checkin_to"
                type="UIDatepicker"
                label="SR_RESERVATION_FILTER_CHECK_IN_TO"
                format="%d-%m-%Y"
                filter="user_utc"
                hint="SR_RESERVATION_FILTER_CHECK_IN_TO"
                onchange="this.form.submit()"
                changeMonth="true"
                changeYear="true"
                />
        <field
                name="checkout_from"
                type="UIDatepicker"
                label="SR_RESERVATION_FILTER_CHECK_OUT_FROM"
                format="%d-%m-%Y"
                filter="user_utc"
                hint="SR_RESERVATION_FILTER_CHECK_OUT_FROM"
                onchange="this.form.submit()"
                changeMonth="true"
                changeYear="true"
                />
        <field
                name="checkout_to"
                type="UIDatepicker"
                label="SR_RESERVATION_FILTER_CHECK_OUT_TO"
                format="%d-%m-%Y"
                filter="user_utc"
                hint="SR_RESERVATION_FILTER_CHECK_OUT_TO"
                onchange="this.form.submit()"
                changeMonth="true"
                changeYear="true"
                />

        <field
                name="origin"
                type="text"
                title="SR_SEARCH_BY_ORIGIN"
                hint="SR_SEARCH_BY_ORIGIN"
                onkeydown="if (event.keyCode == 13) { this.form.submit(); return false; }"
        />
        <field
                name="payment_method_txn_id"
                type="text"
                label="SR_RESERVATION_PAYMENT_TRANSACTION_ID"
                hint="SR_RESERVATION_PAYMENT_TRANSACTION_ID"
                onkeydown="if (event.keyCode == 13) { this.form.submit(); return false; }"
        />
        <field
                name="coupon_code"
                type="text"
                label="SR_FIELD_COUPON_COUPON_CODE_LABEL"
                hint="SR_FIELD_COUPON_COUPON_CODE_LABEL"
                onkeydown="if (event.keyCode == 13) { this.form.submit(); return false; }"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="hidden"/>
        <field
                name="limit"
                type="limitbox"
                default="25"
                label="JGLOBAL_LIST_LIMIT"
                onchange="this.form.submit();"
                />
    </fields>
</form>
