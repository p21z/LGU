            name="staffs"
            label="SR_STAFFS"
    >
        <field
                name="staffs"
                type="subform"
                label="SR_STAFFS"
                multiple="true"
                buttons="add,remove"
        >
            <form>
                <field
                        name="staff_id"
                        type="user"
                        label="SR_USER_SELECT"
                />
                <field
                        name="staff_group_id"
                        type="PartnerUserGroup"
                        label="SR_GROUPS_SELECT"
                        multiple="true"
                        size="10"
                />
            </form>
        </field>
    </fieldset>
</form>
