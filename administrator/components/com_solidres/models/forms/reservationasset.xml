                <option value="1">SR_TOURIST_TAX_CHARGE_TYPE_PER_BOOKING</option>
            </field>

            <field
                    name="tourist_tax_is_percent"
                    class="btn-group"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="SR_FIELD_TOURIST_TAX_IS_PERCENT_LABEL"
                    description="SR_FIELD_TOURIST_TAX_IS_PERCENT_DESC"
                    default="0"
                    showon="enable_tourist_tax:1">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="tourist_tax_rate"
                    type="text"
                    label="SR_FIELD_TOURIST_TAX_RATE_LABEL"
                    description="SR_FIELD_TOURIST_TAX_RATE_DESC"
                    showon="enable_tourist_tax:1[AND]tourist_tax_is_percent:1"/>

            <field
                    name="tourist_tax_cap"
                    type="text"
                    default="0"
                    label="SR_FIELD_TOURIST_TAX_CAP_LABEL"
                    description="SR_FIELD_TOURIST_TAX_CAP_DESC"
                    showon="enable_tourist_tax:1[AND]tourist_tax_is_percent:1"/>

            <field
                    name="tourist_tax_adult_rate"
                    type="text"
                    label="SR_FIELD_TOURIST_TAX_ADULT_RATE_LABEL"
                    description="SR_FIELD_TOURIST_TAX_ADULT_RATE_DESC"
                    showon="enable_tourist_tax:1[AND]tourist_tax_charge_type:0[AND]tourist_tax_is_percent:0"/>

            <field
                    name="tourist_tax_child_rate"
                    type="text"
                    label="SR_FIELD_TOURIST_TAX_CHILD_RATE_LABEL"
                    description="SR_FIELD_TOURIST_TAX_CHILD_RATE_DESC"
                    showon="enable_tourist_tax:1[AND]tourist_tax_charge_type:0[AND]tourist_tax_is_percent:0"/>

            <field
                    name="tourist_tax_child_age_threshold"
                    type="text"
                    label="SR_FIELD_TOURIST_TAX_CHILD_AGE_THRESHOLD_LABEL"
                    description="SR_FIELD_TOURIST_TAX_CHILD_AGE_THRESHOLD_DESC"
                    default="10"
                    showon="enable_tourist_tax:1[AND]tourist_tax_charge_type:0"/>

            <field
                    name="tourist_tax_max_applied_days"
                    type="text"
                    label="SR_FIELD_TOURIST_TAX_MAX_APPLIED_DAY_LABEL"
                    description="SR_FIELD_TOURIST_TAX_MAX_APPLIED_DAY_DESC"
                    default="0"
                    showon="enable_tourist_tax:1"/>

            <field
                    type="spacer"
                    hr="true"
            />

            <field
                    name="enable_captcha"
                    type="list"
                    label="SR_FIELD_USE_CAPTCHA_LABEL"
                    description="SR_FIELD_USE_CAPTCHA_CONFIRMATION_FORM_DESC"
                    default="0">
                <option value="0">JNO</option>
                <option value="recaptcha">SR_RECAPTCHA_DEFAULT</option>
                <option value="recaptcha_invisible">SR_RECAPTCHA_INVISIBLE</option>
            </field>

            <field
                    type="spacer"
                    hr="true"
            />

            <field
                    name="invoice_note"
                    type="textarea"
                    label="SR_FIELD_INVOICE_NOTE_LABEL"
                    description="SR_FIELD_INVOICE_NOTE_DESC"
                    default=""
                    filter="raw"
            />

            <field
                    type="spacer"
                    hr="true"
            />

            <field
                    name="enable_reservation_amending"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="SR_ENABLE_RESERVATION_AMENDING_LABEL"
                    description="SR_ENABLE_RESERVATION_AMENDING_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="can_amend_dates"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    class="btn-group btn-group-yesno"
                    default="0"
                    label="SR_CAN_AMEND_DATES_LABEL"
                    description="SR_CAN_AMEND_DATES_DESC"
                    showon="enable_reservation_amending:1"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                    type="text"
                    name="amend_threshold"
                    label="SR_AMEND_THRESHOLD_LABEL"
                    description="SR_AMEND_THRESHOLD_DESC"
                    showon="enable_reservation_amending:1"
                    defeault="15"
            />

            <field
                    name="enable_reservation_cancel"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="SR_ENABLE_RESERVATION_CANCEL_LABEL"
                    description="SR_ENABLE_RESERVATION_CANCEL_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                    type="text"
                    name="cancel_threshold"
                    label="SR_CANCEL_THRESHOLD_LABEL"
                    description="SR_CANCEL_THRESHOLD_DESC"
                    showon="enable_reservation_cancel:1"
                    defeault="15"
            />

            <field
                    type="spacer"
                    hr="true"
            />

            <field
                    name="general_booking_fee"
                    type="text"
                    default="0"
                    label="SR_GENERAL_BOOKING_FEE_LABEL"
                    description="SR_GENERAL_BOOKING_FEE_DESC"/>

        </fieldset>

        <fieldset name="embed_form">
            <field
                    name="em_form_target"
                    type="list"
                    label="SR_EMBED_TARGET"
                    default="_parent">
                <option value="_parent">SR_EMBED_TARGET_PARENT</option>
                <option value="_blank">SR_EMBED_TARGET_NEW_WIN</option>
            </field>
            <field
                    name="em_bg"
                    type="color"
                    label="SR_EMBED_FORM_BACKGROUND"/>
            <field
                    name="em_color"
                    type="color"
                    label="SR_EMBED_FORM_FONT_COLOR"/>
            <field
                    name="em_input_bg"
                    type="color"
                    label="SR_EMBED_FORM_INPUT_BACKGROUND"/>
            <field
                    name="em_button_bg"
                    type="color"
                    label="SR_EMBED_FORM_BUTTON_BACKGROUND"
                    default="#dddddd"/>
            <field
                    name="em_button_color"
                    type="color"
                    label="SR_EMBED_FORM_BUTTON_COLOR"
                    default="#888888"/>
            <field
                    name="em_room_options"
                    type="list"
                    label="SR_EMBED_FORM_ROOM_OPTIONS"
                    default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="em_max_rooms"
                    type="number"
                    min="1"
                    default="10"
                    showon="em_room_options:1"
                    label="SR_EMBED_MAX_ROOMS_NUMBER"/>

            <field
                    name="em_max_adults"
                    type="number"
                    min="1"
                    default="10"
                    showon="em_room_options:1"
                    label="SR_EMBED_MAX_ADULTS_NUMBER"/>

            <field
                    name="em_max_children"
                    type="number"
                    min="1"
                    default="10"
                    showon="em_room_options:1"
                    label="SR_EMBED_MAX_CHILDREN_NUMBER"/>
        </fieldset>

    </fields>

    <fields name="metadata">
        <fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA">
            <field name="robots" type="list"
                   label="JField_Metadata_Robots_Label" description="JField_Metadata_Robots_Desc"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JGLOBAL_INDEX_FOLLOW</option>
                <option value="1">JGLOBAL_NOINDEX_FOLLOW</option>
                <option value="2">JGLOBAL_INDEX_NOFOLLOW</option>
                <option value="3">JGLOBAL_NOINDEX_NOFOLLOW</option>
                <option value="4">JGLOBAL_NO_ROBOTS_TAG</option>
            </field>

            <field name="author" type="text" label="JAUTHOR"
                   description="JField_Metadata_Author_Desc"/>

            <field name="rights" type="textarea"
                   label="JFIELD_META_RIGHTS_LABEL" description="JFIELD_META_RIGHTS_DESC"
                   required="" filter="string" cols="30" rows="2"/>
        </fieldset>
    </fields>

    <!-- Add fields to the request variables for the layout. -->
    <fieldset name="menu_fields">
        <field
                name="add_to_menu"
                type="radio"
                layout="joomla.form.field.radio.switcher"
                label="SR_ADD_TO_MENU_LABEL"
                description="SR_ADD_TO_MENU_DESC"
                class="btn-group"
                default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="add_to_menutype"
                type="menu"
                label="SR_MENU_SELECT"
                default="mainmenu"
                showon="add_to_menu:1"/>
        <field
                name="menu_title"
                type="text"
                label="SR_MENU_TITLE_LABEL"
                description="SR_MENU_TITLE_DESC"
                showon="add_to_menu:1"/>
        <field
                name="menu_alias"
                type="text"
                label="SR_MENU_ALIAS_LABEL"
                description="SR_MENU_ALIAS_DESC"
                showon="add_to_menu:1"/>
        <field
                name="menu_id"
                type="hidden"
                filter="uint"/>
    </fieldset>

