<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
        <inlinehelp button="show"/>
    </config>
    <fieldset name="general">
        <field name="id" type="hidden" default="0"/>

        <field name="name" type="text"
               default="" label="SR_FIELD_TAX_NAME_LABEL"
               description="SR_FIELD_TAX_NAME_DESC" required="true"/>

        <field name="rate" type="text"
               default="" label="SR_FIELD_TAX_RATE_LABEL"
               description="SR_FIELD_TAX_RATE_DESC" required="true"/>

        <field name="country_id" type="country" label="SR_TAX_FIELD_COUNTRY_LABEL"
               description="SR_TAX_FIELD_COUNTRY_DESC" class="country_select"
               default="0"/>

        <field name="geo_state_id" type="geostate" class="state_select" label="SR_TAX_FIELD_GEO_STATE_LABEL"
               description="SR_TAX_FIELD_GEO_STATE_DESC"
        />

        <field name="state" type="list"
               label="SR_TAX_FIELD_STATE_LABEL" description="SR_TAX_FIELD_STATE_DESC"
               default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="tax_exempt_from" type="text"
               default="0" label="SR_FIELD_TAX_EXEMPT_FROM_LABEL"
               description="SR_FIELD_TAX_EXEMPT_FROM_DESC" required="false"/>

    </fieldset>
</form>
