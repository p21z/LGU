<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
        <inlinehelp button="show"/>
    </config>
    <fieldset name="general">
        <field name="id" type="hidden" default="0" />

        <field name="name" type="text"
               default="" label="SR_FIELD_STATE_NAME_LABEL"
               description="SR_FIELD_STATE_NAME_DESC" required="true"/>

        <field name="country_id" type="country" class="country_select" required="true"
               label="SR_FIELD_COUNTRY_LABEL" multiple="false"
               description="SR_FIELD_COUNTRY_DESC"/>

        <field name="code_2" type="text"
               default="" label="SR_CODE_2_LABEL" required="true"
               description="SR_CODE_2_DESC"/>

        <field name="code_3" type="text"
               default="" label="SR_CODE_3_LABEL" required="true"
               description="SR_CODE_3_DESC"/>

        <field name="state" type="list"
               label="SR_FIELD_STATE_LABEL" description="SR_FIELD_STATE_DESC"
               default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASH</option>
        </field>

    </fieldset>

    <!-- Add fields to the request variables for the layout. -->
</form>
