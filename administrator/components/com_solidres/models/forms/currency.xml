<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
        <inlinehelp button="show"/>
    </config>
    <fieldset name="general">
        <field name="id" type="hidden" default="0"/>

        <field name="currency_name" type="text"
               default="" label="SR_FIELD_CURRENCY_NAME_LABEL"
               description="SR_FIELD_CURRENCY_NAME_DESC" required="true"/>

        <field name="currency_code" type="text" readonly="false"
               default="" label="SR_FIELD_CURRENCY_CODE_LABEL"
               description="SR_FIELD_CURRENCY_CODE_DESC" required="true"/>

        <field name="sign" type="text"
               default="" label="SR_FIELD_CURRENCY_SIGN_LABEL"
               description="SR_FIELD_CURRENCY_SIGN_DESC" required="true"/>

        <field name="exchange_rate" type="text"
               default="" label="SR_FIELD_EXCHANGE_RATE_LABEL"
               description="SR_FIELD_EXCHANGE_RATE_DESC" required="true"/>

        <field name="state"
               type="radio"
               layout="joomla.form.field.radio.switcher"
               label="SR_FIELD_CURRENCY_STATE_LABEL" description="SR_FIELD_CURRENCY_STATE_DESC"
               default="0"
        >
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>

        <field name="filter_range" type="textarea" rows="8"
               default="" label="SR_FIELD_CURRENCY_FILTER_RANGE_LABEL"
               description="SR_FIELD_CURRENCY_FILTER_RANGE_DESC"/>
    </fieldset>
</form>
