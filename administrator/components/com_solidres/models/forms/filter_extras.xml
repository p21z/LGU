<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="SR_FILTER_SEARCH"
                description="SR_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"/>
        <field
                name="state"
                type="status"
                label="SR_FILTER_PUBLISHED"
                description="SR_FILTER_PUBLISHED_DESC"
                onchange="this.form.submit();"
                filter="*,0,1,-2"
                optionsFilter="*,0,1,-2"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
        <field
                name="reservation_asset_id"
                type="reservationasset"
                label="SR_FILTER_RESERVATION_ASSET_SELECT"
                onchange="this.form.submit();"/>
        <field
                name="access"
                type="accesslevel"
                label="JOPTION_FILTER_ACCESS"
                description="JOPTION_FILTER_ACCESS_DESC"
                multiple="true"
                class="multipleAccessLevels"
                onchange="this.form.submit();"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="hidden"/>
        <field
                name="limit"
                type="limitbox"
                default="25"
                label="JGLOBAL_LIST_LIMIT"
                onchange="this.form.submit();"/>
    </fields>
</form>
