<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
                default="0"
        />
        <field
                name="scope"
                type="hidden"
                default="0"
        />
        <field
                name="payment_type"
                type="hidden"
                default="0"
        />
        <field
                name="reservation_id"
                type="hidden"
                required="true"
        />
        <field
                name="currency_id"
                type="hidden"
                label="SR_FIELD_CURRENCY_LABEL"
                required="true"
        />
        <field
                name="title"
                type="text"
                label="SR_PAYMENT_HISTORY_DESCRIPTION"
        />
        <field
                name="payment_date"
                type="calendar"
                label="SR_PAYMENT_DATE"
                showtime="true"
                format="%Y-%m-%d %H:%I:%S"
                filter="user_utc"
                default="now"
        />
        <field
                name="payment_method_id"
                type="list"
                label="SR_PAYMENT_METHOD"
                required="true"
        />
        <field
                name="payment_status"
                type="statuses"
                label="SR_PAYMENT_STATUS"
                scope="0"
                statusType="1"
                required="true"
                validate="options"
        />
        <field
                name="payment_amount"
                type="number"
                label="SR_PAYMENT_AMOUNT"
                min="0"
                required="true"
                filter="floatval"
        />
        <field
                name="payment_method_surcharge"
                type="number"
                label="SR_PAYMENT_METHOD_SURCHARGE"
                min="0"
                filter="floatval"
        />
        <field
                name="payment_method_discount"
                type="number"
                label="SR_PAYMENT_METHOD_DISCOUNT"
                min="0"
                filter="floatval"
        />

        <field
                name="payment_method_txn_id"
                type="text"
                label="SR_RESERVATION_PAYMENT_TRANSACTION_ID"
        />
    </fieldset>
</form>
