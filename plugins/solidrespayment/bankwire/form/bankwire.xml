<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="payments">
        <fieldset
                name="bankwire"
                label="SR_FIELDSET_PAYMENT_BANKWIRE"
        >
            <field
                    name="bankwire_enabled"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    label="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_LABEL"
                    description="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_DESC"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                    name="bankwire_is_default"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    label="SR_FIELD_BANKWIRE_IS_DEFAULT_LABEL"
                    description="SR_FIELD_BANKWIRE_IS_DEFAULT_DESC"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                    name="bankwire_accountname"
                    type="text"
                    default="" label="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_ACCOUNTNAME_LABEL"
                    description="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_ACCOUNTNAME_DESC"
            />
            <field
                    name="bankwire_accountdetails"
                    type="editor"
                    cols="50"
                    rows="8"
                    filter="safehtml"
                    default=""
                    label="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_ACCOUNTDETAILS_LABEL"
                    description="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_ACCOUNTDETAILS_DESC"
            />

            <field
                    name="bankwire_frontend_message"
                    type="textarea"
                    cols="50"
                    rows="8"
                    filter="safehtml"
                    default=""
                    label="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_FRONTEND_MESSAGE_LABEL"
                    description="SR_FIELD_ENABLE_PAYMENT_BANKWIRE_FRONTEND_MESSAGE_DESC"
            />
        </fieldset>
    </fields>
</form>