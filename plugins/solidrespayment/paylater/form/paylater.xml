<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="payments">
        <fieldset
                name="paylater"
                label="SR_FIELDSET_PAYMENT_PAYLATER"
        >
            <field
                    name="paylater_enabled"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="1"
                    label="SR_FIELD_ENABLE_PAYMENT_PAYLATER_LABEL"
                    description="SR_FIELD_ENABLE_PAYMENT_PAYLATER_DESC"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                    name="paylater_is_default"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    label="SR_FIELD_PAYLATER_IS_DEFAULT_LABEL"
                    description="SR_FIELD_PAYLATER_IS_DEFAULT_DESC"

            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                    name="paylater_frontend_message"
                    type="textarea"
                    cols="50"
                    rows="8"
                    filter="safehtml"
                    default=""
                    label="SR_FIELD_ENABLE_PAYMENT_PAYLATER_FRONTEND_MESSAGE_LABEL"
                    description="SR_FIELD_ENABLE_PAYMENT_PAYLATER_FRONTEND_MESSAGE_DESC"
            />
        </fieldset>
    </fields>
</form>